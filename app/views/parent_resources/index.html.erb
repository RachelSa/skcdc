<div id="left-col" class="col l4 m4 s12">
  <%= render file: "/general/_logo" %>
</div>


<div id="right-col" class="col l7 m7 s12">
  <h2 class="center-align">Our Resources</h2>
    <div class="row">
      <% if @parent_resources.any? %>
        <% @parent_resources.each do |parent_resource| %>
          <a href="<%= parent_resource_path(parent_resource) %>">
            <div class="col s12 m10 l4 margin-bottom">
              <div class="light-blue-text center-align">
                <p><%= parent_resource.title %><p>
              </div>
            </div>
          </a>
        <% end %>
        <% else %>
        <p>Sorry, no resources to show.</p>
      <% end %>
    </div>
  </div>
