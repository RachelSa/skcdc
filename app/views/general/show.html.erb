  <div id="left-col" class="col l4 m4">
    <%= render partial: "logo" %>

    <ul>
      <div class="z-depth-1 left-card">
      <h3><%= link_to "Recent Updates", posts_path, class:"yellow-title" %></h3>
      <ul >
      <% @recent_posts.each do |post| %>
        <li ><h6><%= link_to post.title, post_path(post), class:"blue-title" %></h6>
          <% if post.content.length > 70 %>
            <%= post.content[0..70].html_safe + "..." %>
          <% else %>
          <%= post.content.html_safe %>
          <% end %>
          <br></br>
        </li>
        <% end %>
      </div>
    </ul>
  </ul>
</div>

