<%= form_for @post do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :content %>
  <%= f.trix_editor :content %><br></br>

  <%= f.label :upload_attachment %><br>
  <%= f.file_field :upload_attachment %><br></br>

  <%= f.submit 'submit', :class => "waves-effect waves-light amber lighten-1 white-text btn" %><br></br>
<% end %>
