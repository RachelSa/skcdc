<%= form_for @post do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :content %>
  <%= f.trix_editor :content %><br></br>

  <%= f.label :upload_attachment %><br>
  <%= f.file_field :upload_attachment %><br></br>

  <%= f.submit 'submit', :class => "amber lighten-1 white-text btn", data: { confirm:
    "Ready to post this update? All changes will appear on the live SKCDC website." } %><br></br>
<% end %>
