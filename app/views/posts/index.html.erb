<div id="left-col" class="col l4 m4">
  <%= render file: "/general/_logo" %>
</div>


<div id="right-col" class="col l7 m7">
  <h2>Recent Posts</h2>
    <div class="row">
      <% if @posts.any? %>
          <% @posts.each do |post| %>
              <div class="col s12 m12 l10">
                <div class="card">
                  <div class="card-content blue-grey-text center-align">
                <p><%= link_to post.title, post_path(post) %><p>
                </div>
              </div>
            </div>
          <% end %>
        <% else %>
          <p>Sorry, no posts to show.</p>
        <% end %>
    </div>
  </div>
