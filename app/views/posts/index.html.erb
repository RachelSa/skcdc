<div id="left-col" class="col l4 m4">
  <%= render file: "/general/_logo" %>
</div>


<div id="right-col" class="col l6 m6 s12">
  <h2 class="center-align">Recent Posts</h2>
  <div class="row">
    <% if @posts.any? %>
      <div class="collection">
      <% @posts.each do |post| %>
        <a href="<%= post_path(post) %>" class="collection-item">
          <span class="emphasize-text light-blue-text"><%= post.title %></span>
          <span class="demphasize-text light-blue-text"><%= post.created_at.strftime("%B %d, %Y") %></span>
        </a>
      <% end %>
    </div>
    <% else %>
      <p>Sorry, no posts to show.</p>
    <% end %>
    </div>
</div>
