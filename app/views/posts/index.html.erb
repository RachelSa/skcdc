<div id="left-col" class="col l4 m4 s12 center-align border-yellow hide-on-small-and-down">
  <%= render partial: "/general/photo_buttons" %>
</div>


<div id="right-col" class="col l8 m8 s12">
  <h3 class="center-align yellow-title">Recent Posts</h3>
  <div class="row">
    <% if @posts.any? %>
      <div class="collection">
      <% @posts.each do |post| %>
        <a href="<%= post_path(post) %>" class="collection-item center-align">
          <div class="emphasize-text"><%= post.title %></div>
          <div class="demphasize-text"><%= post.created_at.strftime("%B %d, %Y") %></div>
          <div class="demphasize-text"><%= sanitize post.content.truncate(150, separator: ' ') %></div>
        </a>
      <% end %>
    </div>
    <% else %>
      <p>Sorry, no posts to show.</p>
    <% end %>
    </div>
</div>
