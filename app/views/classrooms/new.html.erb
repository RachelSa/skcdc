<div id="left-col" class="col l4">
  <h5>Admin Account</h5>

</div>

<div id="right-col" class='col l6'>
  <h5>New Classroom</h5>
  <%= form_for @classroom do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :image_url %>
    <%= f.text_field :image_url %>

    <%= f.label :location %>
    <%= f.text_field :location %>

    <%= f.label :description %>
    <%= f.text_field :description %>

    <%= f.label :street_address %>
    <%= f.text_field :street_address %>

    <%= f.label :town %>
    <%= f.text_field :town %>

    <%= f.label :zipcode %>
    <%= f.text_field :zipcode %>

    <%= f.label :phone %>
    <%= f.text_field :phone %>

    <%= f.submit %>
  <% end %>
</div>
