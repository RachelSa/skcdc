
<div id="left-col" class="col l4 m4">
    <%= render file: "/general/_logo" %>

</div>


<div id="right-col" class="col l7 m7">
  <h2 class="center-align">Our Classrooms</h2>
    <div class="row">
      <% if @classrooms.any? %>
        <% @classrooms.each do |classroom| %>
          <a href="<%= classroom_path(classroom) %>">
            <div class="col s12 m12 l4 margin-bottom">
                <span class="light-blue-text center-align">
                  <div><%= classroom.name.upcase %></div>
                  <div><%= classroom.town %>, Maine</div>
                </span>
            </div>
          </a>
        <% end %>
      <% else %>
      <p>Sorry, no classrooms to show.</p>
      <% end %>
    </div>
  </div>
