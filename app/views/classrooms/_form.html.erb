<h5><%= @classroom.name %></h5>
<%= form_for @classroom do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :street_address %>
  <%= f.text_field :street_address %>

  <%= f.label :town %>
  <%= f.text_field :town %>

  <%= f.label :zipcode %>
  <%= f.text_field :zipcode %>

  <%= f.label :phone %>
  <%= f.text_field :phone %>


  <% if @programs %>
    <%= f.label :programs %><br>
      <%= f.collection_check_boxes(:program_ids, @programs, :id, :title) do |b| %>
        <div> <%= b.check_box %><%= b.label { b.text } %></div>
      <% end %>
  <% end %><br>

  <%= f.label :image %><br>
  <%= f.file_field :image %><br></br>

  <%= f.submit 'submit', :class => "amber lighten-1 white-text btn", data: { confirm:
    "Ready to post this update? All changes will appear on the live SKCDC website." } %><br></br>
<% end %>
