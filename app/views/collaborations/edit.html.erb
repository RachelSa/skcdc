<div id="left-col" class="col l4">
  <h5>Admin Account</h5>
  Does <%= @collaboration.title %> no longer exist?<br>
  <%= button_to "delete collaboration", @collaboration, :method => :delete, data: {confirm: "Are you sure you want to delete this collaboration?"} %>

</div>

<div id="right-col" class='col l6'>
  <h5>Update Collaboration</h5>


  <%= form_for @collaboration do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :description %>
    <%= f.text_area :description %>

<br>

    <%= f.submit %>
  <% end %>
</div>
